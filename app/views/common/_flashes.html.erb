<% if flash.any? %>
  <% user_facing_flashes.each do |key, value| %>
    <div class="alert alert_dismissable alert-<%= flash_class(key) %> fade show" role="alert">
      <button class="close" data-dismiss="alert" aria-label="Close">&times;</button>
      <%= value %>
    </div>
  <% end %>
<% end %>
