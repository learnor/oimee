<h2>New Order</h2>
<div class="col-md-8 col-md-offset-2">
  <%= simple_form_for @order do |f|%>
    <div class="form-group">
      <%= f.input :order_no %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
